<h1 align="center">Mettre à jour la commande</h1>
<%= render 'shared/errors', obj: @order %>

<div class='row'>
  <div class='col-xs-12'>
    <div class="editform-header">
      <div class="control-label col-sm-4">
      </div>
      <div class="col-sm-6">
        Commande <%= @order.id %> : <%= @order.recipe %>
        commandée par <%= @order.user.first_name %> <%= @order.user.last_name %>
        à <%= @order.created_at.strftime('%c') %>
      </div>
    </div>
    <br/>
    <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :state, "Avancement : " %>
        </div>
        <div class="col-sm-6">
          <%= f.select :state, options_for_select(
                { "Reçue" => "Reçue",
                  "Acceptée" => "Acceptée",
                  "Refusée" => "Refusée",
                  "En préparation" => "En préparation",
                  "En cours de livraison" => "En cours de livraison",
                  "Livrée" => "Livrée"
                 }, @order.state
          ), class: "form-control" %>
<%
=begin %>
<%= f.text_field :state, class: "form-control", placeholder: "Avancement" %>
<%
=end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <%= f.submit "Mettre à jour", class: 'btn btn-primary btn-lg'  %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-3">
      [ <%= link_to "Retour à la liste des commandes", orders_path %> ]
    </div>
  </div>
</div>
