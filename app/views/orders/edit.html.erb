<h1 align="center">Mettre à jour la commande</h1>
<%= render 'errors', obj: @order %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :orderer_first_name, "Prénom du Client : " %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :orderer_first_name, class: "form-control", placeholder: "Prénom", :readonly => true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :orderer_last_name, "Nom du Client : " %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :orderer_last_name, class: "form-control", placeholder: "Nom", :readonly => true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :recipe, "Recette : " %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :recipe, class: "form-control", placeholder: "Recette", :readonly => true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :id, "Numéro de commande : " %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :id, class: "form-control", placeholder: "Numéro de commande", :readonly => true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :state, "Avancement : " %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :state, class: "form-control", placeholder: "Avancement" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <%= f.submit "Mettre à jour", class: 'btn btn-primary btn-lg'  %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-3">
      [ <%= link_to "Retour à la liste des commandes", orders_path %> ]
    </div>
  </div>
</div>
