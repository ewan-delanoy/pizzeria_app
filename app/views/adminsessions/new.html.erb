<h1 align="center">Connexion au mode administrateur</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: adminlogin_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name, "Identifiant" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Identifiant", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password, "Mot de passe" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "Envoyer", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Retour", root_path %> ]
</div>
