<h1 align="center">Inscription</h1>
<%= render 'shared/errors', obj: @user %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :first_name, "Prénom : " %>
        </div>
        <div class="col-sm-7">
          <%= f.text_field :first_name, class: "form-control", placeholder: "Prénom", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :last_name, "Nom : " %>
        </div>
        <div class="col-sm-7">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Nom" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :email, "Courriel : " %>
        </div>
        <div class="col-sm-7">
          <%= f.email_field :email, class: "form-control", placeholder: "Courriel" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :password, "Mot de passe : " %>
        </div>
        <div class="col-sm-7">
          <%= f.password_field :password, class: "form-control", placeholder: "Mot de passe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
        <%= recaptcha_tags %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 col-sm-offset-5">
          <%= f.submit "S'inscrire", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-2 col-xs-offset-5 ">
      [ <%= link_to "Annuler", root_path %> ]
    </div>
  </div>
</div>
