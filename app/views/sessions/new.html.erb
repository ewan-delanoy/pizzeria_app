<h1 align="center">Identifiants de Connexion</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email, "Courriel" %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Adresse mail ici", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password, "Mot de passe" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "Envoyer", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
<h3 align="center">Pas encore inscrit ? Alors veuillez vous inscrire <%= link_to 'ici', signup_path %> </h3>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Retour", root_path %> ]
</div>
